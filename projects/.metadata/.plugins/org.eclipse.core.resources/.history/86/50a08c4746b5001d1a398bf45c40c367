#ifndef MOTOR_CONFIG_H_
#define MOTOR_CONFIG_H_

/*PWM Pins :
 * 1. B3
 * 2. D4
 * 3. D5
 * 4. D7*/
#define MOTOR1_PWM_PIN		B3
