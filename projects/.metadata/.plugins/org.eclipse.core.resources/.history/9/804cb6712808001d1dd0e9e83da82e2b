#ifndef  LED_INTERFACE_H_
#define  LED_INTERFACE_H_

#define LED_u8SOURCE    	1
#define LED_u8SINK    		0

typedef struct
{
	u8 Port;
	u8 Pin;
	u8 ConnectionType;
}LED_T;



u8 LED_voidTurnOn(LED_T *LED);
u8 LED_voidTurnOff(LED_T *LED);
u8 LED_voidBlink(u8 Copy_u8Delay ,LED_T *LED);


#endif
