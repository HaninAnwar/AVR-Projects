#ifndef  TIMER_REGISTER_H_
#define  TIMER_REGISTER_H_


#define  OCR0				*((volatile u8*)0x5C)

#define  TCCR0				*((volatile u8 *)0x53)
#define  TCCR0_WGM00		6
#define  TCCR0_WGM01		3

#define  TCCR0_CS00			0
#define  TCCR0_CS01			1
#define  TCCR0_CS02			2


#define TIMSK				*((volatile u8*)0x59)
#define TIMSK_OCIE0			1
#endif
