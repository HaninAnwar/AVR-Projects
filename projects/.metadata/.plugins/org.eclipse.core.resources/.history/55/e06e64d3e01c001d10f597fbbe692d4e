#include "STD_TYPES.h"
#include "util/delay.h"

#include "DIO_interface.h"
#include "PORT_interface.h"
#include "CLCD_interface.h"
#include "KEYPAD_interface.h"


void main(void)
{
	u8 Local_u8CurrentSlot,Local_u8CrurrentDigit,Local_u8CurrentX,Local_u8CurrentY;
	u8 Local_u8PressedKey;

	u8 Local_pu8Arrow[8] = {
				0b00000100,
				0b00001110,
				0b00011111,
				0b00000100,
				0b00000100,
				0b00000100,
				0b00000100,
				0b00000100,

		};

	PORT_voidInit();
	CLCD_voidInit();

	/*CurrentSlot :
	 * Hours  : Minutes : Seconds
	 * 	3			2		1	*/
	Local_u8CurrentSlot = 3;

	/*CurrentDigit :
	 * Second Digit / First Digit
	 * 		2		/	1		*/
	Local_u8CrurrentDigit = 2;
	CLCD_voidGoToXY(0,2);
	CLCD_voidWriteNumber(00);
	while(1)
	{
		do
		{
			Local_u8PressedKey = KPD_GetPressedKey();
		}

		while(Local_u8PressedKey == 0xff);
	}
}
