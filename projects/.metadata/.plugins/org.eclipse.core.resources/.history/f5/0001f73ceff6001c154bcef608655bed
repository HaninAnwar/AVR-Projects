#ifndef  LED_INTERFACE_H_
#define  LED_INTERFACE_H_

#define LED_u8ON    	1
#define LED_u8OFF    	0

typedef struct
{
	u8 Port;
	u8 Pin;
	u8 ConnType;
}LED_T;



u8 LED_voidTurnOn(u8 Copy_u8Port , u8 Copy_u8Pin , u8 Copy_ConnType);
u8 LED_voidTurnOff(u8 Copy_u8Port , u8 Copy_u8Pin ,u8 Copy_ConnType);
u8 LED_voidBlink(u8 Copy_u8Port , u8 Copy_u8Pin ,u8 Copy_ConnType);


#endif
