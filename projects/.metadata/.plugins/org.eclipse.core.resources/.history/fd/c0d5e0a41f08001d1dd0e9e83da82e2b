#include "STD_TYPES.h"
#include "BIT_MATH.h"
#include <util/delay.h>


#include "DIO_interface.h"
#include "SW_interface.h"
#include "SW_config.h"
#include "SW_private.h"

u8 SW_u8GetState(SW_T *SW,u8 *Copy_pu8State)
{
	u8 Local_ErrorState = 0;

	if(SW->SelfLockType == SW_u8SELF_LOCK)
	{
		if(SW->PullType == SW_u8PULL_UP)
		{
			if(SW->Pin == 0)

				*Copy_pu8State = SW_u8PRESSED;

			else if(SW->Pin == 1)

				*Copy_pu8State = SW_u8NOT_PRESSED;

		}

		else if(SW->PullType == SW_u8PULL_DN)
		{
			if(SW->Pin == 0)

				*Copy_pu8State = SW_u8NOT_PRESSED;

			else if(SW->Pin == 1)

				*Copy_pu8State = SW_u8PRESSED;
		}

		else
		{
			Local_ErrorState = 1;
		}
	}

	else if(SW->SelfLockType == SW_u8NOT_SELF_LOCK)
	{
		if(SW->PullType == SW_u8PULL_UP)
		{
			_delay_ms(50);
			if(SW->Pin == 0)
			{

				*Copy_pu8State = SW_u8PRESSED;
			}

			_delay_ms(50);
			else if(SW->Pin == 1)
			{
				*Copy_pu8State = SW_u8NOT_PRESSED;
			}
		}

		else if(SW->PullType == SW_u8PULL_DN)
		{
			if(SW->Pin == 0)
			{
				_delay_ms(50);
				*Copy_pu8State = SW_u8NOT_PRESSED;
			}
			else if(SW->Pin == 1)
			{
				_delay_ms(50);
				*Copy_pu8State = SW_u8PRESSED;
			}
		}

		else
		{
			Local_ErrorState = 1;
		}
	}

	else
	{
		Local_ErrorState = 1;
	}



	return Local_ErrorState;
}
