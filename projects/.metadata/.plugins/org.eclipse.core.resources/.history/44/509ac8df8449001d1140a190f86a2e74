#include "STD_TYPES.h"

#include "DIO_interface.h"

#include "MOTOR_config.h"
#include "MOTOR_interface.h"
#include "MOTOR_private.h"


void MOTOR_voidDCMotorInit(void)
{

}
u8 MOTOR_u8DCMotorRotate(u8 Copy_u8Port, u8 Copy_u8Pin1 ,u8 Copy_u8Pin2, u8 Copy_u8Direction)
{
	u8 Local_u8ErrorState = OK;

	if (Copy_u8Direction == MOTOR_CLK_WISE)
	{
		DIO_u8SetPinValue(Copy_u8Port,Copy_u8Pin2,DIO_u8PIN_LOW);
		DIO_u8SetPinValue(Copy_u8Port,Copy_u8Pin1,DIO_u8PIN_HIGH);

	}

	else if(Copy_u8Direction == MOTOR_UNTI_CLK_WISE)
	{
		DIO_u8SetPinValue(Copy_u8Port,Copy_u8Pin1,DIO_u8PIN_LOW);
		DIO_u8SetPinValue(Copy_u8Port,Copy_u8Pin2,DIO_u8PIN_HIGH);
	}

	else
	{
		Local_u8ErrorState = NOK;
	}
	return Local_u8ErrorState;
}
