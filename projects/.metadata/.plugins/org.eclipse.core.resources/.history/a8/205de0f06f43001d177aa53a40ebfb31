#include "STD_TYPES.h"
#include "BIT_MATH.h"
#include <util/delay.h>

#include "DIO_interface.h"
#include "PORT_interface.h"
#include "TIMER_interface.h"
#include "GIE_interface.h"

void LED(void);

void main(void)
{
	PORT_voidInit();
	TIMER0_voidInit();
	TIMER0_u8SetCallBack(&LED);
	while(1)
	{
		DIO_u8SetPinValue(DIO_u8PORTA,DIO_u8PIN7,DIO_u8PIN_HIGH);
		_delay_us(150);
		DIO_u8SetPinValue(DIO_u8PORTA,DIO_u8PIN7,DIO_u8PIN_LOW);
		_delay_us(150);

	}

}

void LED(void)
{
	static u16 Local_u16Counter = 0;
	static u8 Local_u8LedState = 0;
	Local_u16Counter++;

	if(Local_u16Counter == 4000)
	{
		Local_u16Counter = 0;
		TOGGLE_BIT(Local_u8LedState,0);
		DIO_u8SetPinValue(DIO_u8PORTA,DIO_u8PIN0,Local_u8LedState);
	}
}
