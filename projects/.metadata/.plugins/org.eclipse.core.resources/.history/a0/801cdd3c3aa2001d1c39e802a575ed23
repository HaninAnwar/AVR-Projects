#ifndef  USART_CONFIG_H_
#define  USART_CONFIG_H_

/* USART Mode Select :
 * 1. ASYNCH
 * 2. SYNCH
 * */
#define  USART_MODE		ASYNCH

/*Parity Mode Select :
 * 1.DISABLED
 * 2.EVEN
 * 3.ODD
 * */

#define  PARITY_MODE	DISABLED

/* Stop Bit Select :
 * 1. ONE_BIT
 * 2. TWO_BIT
 * */
#define  STOP_BIT		ONE_BIT
