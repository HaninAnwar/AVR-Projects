#ifndef  SW_INTERFACE_H_
#define  SW_INTERFACE_H_

#define SW_Pressed			1
#define SW_NotPressed    	0

#define SW_SelfLock			1
#define SW_NotSelfLock		0

#define SW_PullUp			1
#define SW_PullDn			0

typedef struct
{
	u8 Port;
	u8 Pin;
	u8 SelfLockType;
	u8 PullType;
}SW_T;

u8 SW_u8GetState(SW_T *SW);

#endif
