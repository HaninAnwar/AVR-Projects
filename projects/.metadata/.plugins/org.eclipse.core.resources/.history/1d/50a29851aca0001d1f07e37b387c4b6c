#include "STD_TYPES.h"
#include <util/delay.h>

#include "DIO_interface.h"
#include "PORT_interface.h"
#include "EXTI_interface.h"

#include "MOTOR_interface.h"


void main (void)
{
	PORT_voidInit();

	Stepper_Motor *Stepper1;
	Stepper1->Port = DIO_u8PORTA;
	Stepper1->Pink_Pin = DIO_u8PIN0;
	Stepper1->Blue_Pin = DIO_u8PIN1;
	Stepper1->Yellow_Pin = DIO_u8PIN2;
	Stepper1->Orange_Pin = DIO_u8PIN3;


	while(1)
	{
		/*C.W*/
		MOTOR_u8StepperRotate(&Stepper1,MOTOR_CLK_WISE);
		DIO_u8SetPinValue(DIO_u8PORTC,DIO_u8PIN0,DIO_u8PIN_HIGH);

//		_delay_ms(1000);
//
//		DIO_u8SetPinValue(DIO_u8PORTC,DIO_u8PIN0,DIO_u8PIN_LOW);
//		MOTOR_voidStepperStop();
//
//		/*C.C.W*/
//		MOTOR_u8StepperRotate(MOTOR_UNTI_CLK_WISE);
//		DIO_u8SetPinValue(DIO_u8PORTC,DIO_u8PIN1,DIO_u8PIN_HIGH);
//
//		_delay_ms(1000);
//		DIO_u8SetPinValue(DIO_u8PORTC,DIO_u8PIN1,DIO_u8PIN_LOW);
//		MOTOR_voidStepperStop();


	}
}

