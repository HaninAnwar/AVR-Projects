#ifndef  USART_PRIVATE_H_
#define  USART_PRIVATE_H_

#define ASYNCH			1
#define SYNCH			2

#define DISABLED		1
#define EVEN			2
#define ODD				3

#define ONE_BIT			1
#define TWO_BIT			2

/* Character Size :
 * 1. FIVE_BIT
 * 2. SIX_BIT
 * 3. SEVEN_BIT
 * 4. EIGHT_BIT
 * 5. NINE_BIT
 * */
#define FIVE_BIT		1
#define SIX_BIT			2
#define SEVEN_BIT		3
#define EIGHT_BIT		4
#define NINE_BIT		5

#endif
